@model VeiculoProtegido.Application.ViewModels.TipoFIPEViewModel
<select data-placeholder="Selecionar Tipo"
        class="select2 form-control" id="default-select">
        name="TipoFIPE">
    <option value=""></option>
    @foreach (var item in Model.TipoFIPEViewModels)
    {
        if (item.Id.Equals(Model.Id))
        {
            <option value="@item.Id" selected>@item.Descricao</option>
        }
        else
        {
            <option value="@item.Id">@item.Descricao</option>
        }
    }
</select>

