@model VeiculoProtegido.Application.ViewModels.TabelaPrecoFaixaTabelaPrecoViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "TabelasPreco", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="content-wrap">
        <main id="content" class="content" role="main">
            <ol class="breadcrumb">
                <li>Cadastro</li>
            </ol>
            <h1 class="page-title"><span class="fw-semi-bold">Tabelas de Preço</span></h1>
            <div class="row">
                <div class="col-md-6">
                    <section class="widget">
                        <header>
                            <div class="widget-controls">
                                <a href="#"><i class="glyphicon glyphicon-cog"></i></a>
                                <a href="#"><i class="fa fa-refresh"></i></a>
                                <a href="#" data-widgster="close"><i class="glyphicon glyphicon-remove"></i></a>
                            </div>
                        </header>
                        <div class="widget-body">
                            <form role="form">
                                <fieldset>
                                    <div class="row">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group">
                                                <div class="col-sm-8">
                                                    @Html.LabelFor(model => model.Descricao)
                                                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite a Descrição Aqui" } })
                                                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => model.TipoFipe)
                                                    @Html.DropDownListFor(model => model.TipoFipe, new SelectList(ViewBag.TipoFIPEList, "Id", "Descricao"), string.Empty)
                                                    @Html.ValidationMessageFor(model => model.TipoFipe, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                    </div>
                                        @*@Html.Partial("_FaixaTabelaPreco")*@
                                    <br />
                                        <div class="col-sm-offset-6">
                                            <div class="btn-toolbar">
                                                <button id="btnAdicionar" type="submit" class="btn btn-primary pull-right">Adicionar</button>
                                                <button id="btnCancelar" type="button" class="btn btn-inverse pull-right">Cancelar</button>
                                            </div>
                                        </div>
                                </fieldset>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </main>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<div class="loader-wrap hiding hide">
    <i class="fa fa-circle-o-notch fa-spin-fast"></i>
</div>

